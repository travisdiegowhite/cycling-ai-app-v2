# Cycling AI App - Environment Variables
# Copy this file to .env and fill in your actual values

# === CLIENT-SIDE ENVIRONMENT VARIABLES ===
# These are safe to expose in the browser and start with REACT_APP_

# Mapbox API Token (PUBLIC - for maps and routing)
REACT_APP_MAPBOX_TOKEN=pk.your_mapbox_token_here

# Supabase Configuration (PUBLIC)
REACT_APP_SUPABASE_URL=https://your-project.supabase.co
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Weather API Key (PUBLIC - for weather data)
REACT_APP_WEATHER_API_KEY=your_openweather_api_key_here

# Strava API Configuration (PUBLIC)
REACT_APP_STRAVA_CLIENT_ID=your_strava_client_id_here
REACT_APP_STRAVA_REDIRECT_URI=http://localhost:3000/strava/callback

# === SERVER-SIDE ENVIRONMENT VARIABLES ===
# These are PRIVATE and only accessible on the server/API routes

# Anthropic Claude AI API Key (PRIVATE - server-side only)
ANTHROPIC_API_KEY=sk-ant-api03-your_claude_api_key_here

# Supabase Service Key (PRIVATE - server-side database operations)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Strava API Secret (PRIVATE - OAuth token exchange)
STRAVA_CLIENT_ID=your_strava_client_id_here
STRAVA_CLIENT_SECRET=your_strava_client_secret_here

# === SECURITY CONFIGURATION ===

# Environment
NODE_ENV=development

# Vercel URL (automatically set in production)
VERCEL_URL=

# === API RATE LIMITING (Optional) ===
# Configure rate limits for API endpoints

# Requests per minute per IP for Claude API
CLAUDE_RATE_LIMIT=10

# Requests per minute per user for Strava API
STRAVA_RATE_LIMIT=60

# === LOGGING CONFIGURATION (Optional) ===

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# External logging service URL (for production)
LOGGING_SERVICE_URL=

# === DATABASE CONFIGURATION ===

# Database connection pool size
DB_POOL_SIZE=10

# Database timeout in milliseconds
DB_TIMEOUT=5000

# === FEATURE FLAGS (Optional) ===

# Enable/disable features
FEATURE_CLAUDE_AI=true
FEATURE_STRAVA_INTEGRATION=true
FEATURE_WEATHER_INTEGRATION=true
FEATURE_FILE_UPLOAD=true

# === MONITORING (Optional) ===

# Performance monitoring service
SENTRY_DSN=

# Analytics service
ANALYTICS_ID=